<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/time_txt"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myeongjo_bold"
        android:text="SHARETIME"
        android:background="#fff123"
        android:textSize="30sp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/sharename_text"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myeongjo_bold"
        android:text="SHARENAME"
        android:background="#ff2969"
        android:padding="10dp"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#ff797d">
        <TextView
            android:id="@+id/tag1_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/myeongjo_bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tag2_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/myeongjo_bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tag3_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/myeongjo_bold"
            android:textSize="25sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:shadowColor="#cd9bff"
            android:fontFamily="@font/kopub_dot_bold"
            android:textSize="20sp"
            android:text="GO"
            />
    </LinearLayout>

</LinearLayout>